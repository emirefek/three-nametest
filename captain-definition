  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:18.8.0-alpine",
    "RUN mkdir -p /usr/src/app",
    "WORKDIR /usr/src/app",
    "COPY ./ /usr/src/app/",
    "RUN ls -la",
    "RUN npm install",
    "RUN npm run build",
    "RUN npm cache clean --force",
    "FROM nginx:latest",
    "COPY --from=0 /usr/src/app/dist /usr/share/nginx/html",
    "RUN chmod -R 777 /usr/share/nginx/html"
  ]
